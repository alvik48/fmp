{
  "paths": {
    "src": {
      "html": "./",
      "styles": "styles",
      "fonts": "fonts",
      "images": "images",
      "js": "js"
    },
    "temp": {
      "html": ".tmp",
      "styles": ".tmp/styles",
      "fonts": ".tmp/fonts",
      "images": ".tmp/images",
      "js": ".tmp/js"
    }
  },

  "html": {
    "partials": "/partials"
  },

  "server": {
    "host": "http://localhost",
    "port": 3000
  },

  "styles": {
    "src": {
      "original": "app.styl",
      "compiled": "app.css",
      "processor": "stylus"
    },
    "plugins": {
      "autoprefixer": {
        "browsers": ["last 2 versions", "Explorer > 8"],
        "cascade": false
      }
    }
  },

  "images": {
    "src": {

    },
    "plugins": {
      "sprite": {
        "src": "/sprite",
        "spriteName": "elements.png",
        "styleName": "sprite.styl",
        "path": "/includes",
        "cssPath": "./../images/elements.png"
      }
    }
  },

  "js": {
    "src": {
      "original": "app.js"
    }
  }
}