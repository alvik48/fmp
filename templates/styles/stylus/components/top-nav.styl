.top-nav
  clear()
  float right

  a
    display none
    float left
    padding 0 20px
    text-align center
    height 64px
    color #fff
    text-decoration none
    font-weight 500
    font-size 1.4em
    text-shadow 1px 1px 2px rgba(#000, .6),;

    &:hover
      background rgba(#fff, .2)

  .icon-nav
    float right
    cursor pointer
    box-sizing: border-box
    display block
    position relative
    width 50px
    height 50px
    margin 7px 0
    border-radius 50% 50% 50% 50%
    background linear-gradient(to bottom,
    #fff 0px, #fff 14px,
    $primary-color 14px, $primary-color 18px,
    #fff 18px, #fff 22px,
    $primary-color 22px, $primary-color 26px,
    #fff 26px, #fff 30px,
    $primary-color 30px, $primary-color 34px,
    #fff 34px, #fff 50px)
    overflow hidden

    &:before,
    &:after
      content ''
      position absolute
      top: 0
      left: 0
      display block
      width 13px
      height 50px
      background #fff
      box-shadow 35px 0 0 #fff

    &:after
      left auto
      right 0

    &:hover:before,
    &:hover:after
      width 10px

  &.active
    position fixed
    width 100%
    left 0
    top 0
    z-index 10
    box-sizing border-box
    padding-top 64px

    a
      display block
      width 100%
      height 64px
      background #fff
      color $primary-color
      border-bottom 1px solid $primary-color
      text-shadow none
      padding 0
      float none

    .icon-nav
      margin-top -57px
      margin-right 30px

/* ==============================================
    Responsive: Tablets
============================================== */

@media only screen and (min-width: $tablet)
  .top-nav
    a
      display block

    .icon-nav
      display none